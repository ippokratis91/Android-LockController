<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_air_condition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.i.lockcontroller.AirConditionActivity"
    android:weightSum="1">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:id="@+id/roomsListView"
        android:layout_weight="0.50" />

    <Button
        android:text="+"
        android:layout_width="58dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:id="@+id/plusBtn"
        android:onClick="increaseTemp (AirConditionActivity)" />

    <TextView
        android:text="20"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempTV"
        android:layout_marginTop="12dp"
        android:layout_weight="0.22" />

    <Button
        android:text="-"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:id="@+id/minusBtn"
        android:onClick="decreaseTemp (AirConditionActivity)" />

    <TextView
        android:text="Room Temperature: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roomTempTV"
        android:layout_weight="0.50" />

</LinearLayout>
